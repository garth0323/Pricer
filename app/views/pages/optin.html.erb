<div class="page-header">
  <h1>Email Pricing <small>calculator</small></h1>
</div>

<div class="row-fluid">
  <div class="span4 well">
    <%= form_tag( '/optinresult', method: "post") do %>
      <div class='form-group'>
        <%= label_tag(:subscribers, "How many emails?") %>
        <div class="controls">
          <%= text_field_tag(:subscribers) %>
        </div>
      </div>
      <div class='form-group'>
        <%= radio_button_tag(:template_price, "custom") %>
          <%= label_tag(:template_price_custom, "Custom Template") %>
      </div>
      <div class='form-group'>
        <%= radio_button_tag(:template_price, "semi") %>
          <%= label_tag(:template_price_semi, "Semi-custom template") %>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-success">Get Price</button>
      </div>
    <% end %>
  </div>
</div>