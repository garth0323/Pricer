<div class="page-header">
  <h1>Email Pricing <small>calculator</small></h1>
</div>

<div class="row-fluid">
  <div class="span4 well">
    <%= form_tag( '/result', method: "post") do %>
      <div class='form-group'>
        <%= label_tag(:amount, "How many emails?") %>
        <div class="controls">
          <%= text_field_tag(:amount) %>
        </div>
      </div>
      <div class='form-group'>
        <%= label_tag(:frequency, "How many times?") %>
        <div class="controls">
          <%= text_field_tag(:frequency) %>
        </div>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-success">Get Price</button>
      </div>
    <% end %>
  </div>
</div>

